<UserControl x:Class="TeamBuddy.App.Views.UserInfoUC"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Left" Height="421" Grid.Row="1" VerticalAlignment="Top" Width="200" Grid.RowSpan="2"
                Grid.Column="0">
        <ItemsControl HorizontalAlignment="Center" ItemsSource ="{Binding Path = Students}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="MessageTextBox" HorizontalAlignment="Center" Text="{Binding Path = FirstName, Mode = TwoWay}"/>
                    <ComboBox  ItemsSource="{Binding Source={StaticResource enmStatus}}"></ComboBox>
                    <TextBlock x:Name="TextBlock1Copy" TextWrapping="Wrap" Text=" "/>
                    <TextBlock x:Name="TextBlock1Copy1" TextWrapping="Wrap" Text=" "/>
                    <TextBlock x:Name="TextBlock1Copy2" TextWrapping="Wrap" Text=" "/>
                    <TextBlock x:Name="TextBlock1Copy3" TextWrapping="Wrap" Text=" "/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</UserControl>